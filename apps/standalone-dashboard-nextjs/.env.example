# Multi-Mode Data Service Configuration
NEXT_PUBLIC_DATA_SOURCE=azure
NEXT_PUBLIC_AZURE_FUNCTION_BASE=https://fn-scout-readonly.azurewebsites.net/api
NEXT_PUBLIC_AZURE_FUNCTION_KEY=your-azure-function-key

# Parquet Data Source (optional)
NEXT_PUBLIC_PARQUET_BASE_URL=/data/parquet

# Data Source Options: azure | parquet | mock | production
# azure: Connect to Azure Functions API (default)
# parquet: Use static Parquet files (faster, cached)
# mock: Use local mock data only (development)
# production: Same as azure but with production settings

# Mapbox Configuration
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# Analytics Configuration
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# Performance Configuration
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_MAX_RETRIES=3

# Regional Configuration
NEXT_PUBLIC_DEFAULT_REGION=NCR
NEXT_PUBLIC_DEFAULT_CURRENCY=PHP
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Manila

# Feature Flags
NEXT_PUBLIC_ENABLE_INSIGHTS=true
NEXT_PUBLIC_ENABLE_COMPARE=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# Legacy Supabase Configuration (removed - no longer needed)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# MindsDB Configuration (for forecasting - optional)
# MINDSDB_URL=https://cloud.mindsdb.com
# MINDSDB_EMAIL=your-email@example.com
# MINDSDB_PASSWORD=your-password