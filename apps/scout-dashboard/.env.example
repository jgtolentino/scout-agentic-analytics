# Scout v7 Dashboard Environment Configuration

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Scout Data Warehouse Connection
SCOUT_DATABASE_URL=your_scout_database_connection_string
SCOUT_API_KEY=your_scout_api_key

# NextJS Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Security Configuration
# Rate limiting (requests per minute per IP)
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_REFRESH_THRESHOLD_MINUTES=15

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=info

# Cache Configuration
DEFAULT_CACHE_TTL_SECONDS=300
MAX_CACHE_TTL_SECONDS=3600

# API Security
API_REQUEST_TIMEOUT_MS=30000
MAX_QUERY_COMPLEXITY=1000

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true

# Development/Debug Settings
NODE_ENV=development
DEBUG_MODE=false
LOG_LEVEL=info

# External Services
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret