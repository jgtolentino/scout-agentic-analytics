# Scout v7 Dashboard Production Environment Variables
# These need to be set in Vercel Project Settings â†’ Environment Variables

# === CRITICAL CLIENT VARIABLES (NEXT_PUBLIC_*) ===
# These are exposed to the browser and MUST be present for the dashboard to work

# Mapbox for Store Performance Map
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token_here

# App Configuration
NEXT_PUBLIC_APP_MODE=production
NEXT_PUBLIC_SCOUT_SCHEMA=scout

# === CRITICAL SERVER VARIABLES ===
# These are server-side only and should NOT be exposed to the browser

# Azure SQL Database Configuration
AZURE_SQL_SERVER=sqltbwaprojectscoutserver.database.windows.net
AZURE_SQL_DATABASE=SQL-TBWA-ProjectScout-Reporting-Prod
AZURE_SQL_USER=sqladmin
AZURE_SQL_PASSWORD=Azure_pw26

# Scout API Configuration
SCOUT_API_KEY=your_scout_api_key

# === OPTIONAL CONFIGURATION ===

# Security & Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
SESSION_TIMEOUT_MINUTES=60
MAX_QUERY_COMPLEXITY=1000

# Authentication
NEXTAUTH_URL=https://scout-dashboard-xi.vercel.app
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth (if using)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true

# === VERCEL DEPLOYMENT VARIABLES ===
# These are automatically set by Vercel, but can be overridden

VERCEL_ENV=production
NODE_ENV=production

# === DEBUGGING (REMOVE IN PRODUCTION) ===
# Uncomment only for debugging deployment issues

# DEBUG_MODE=false
# LOG_LEVEL=info