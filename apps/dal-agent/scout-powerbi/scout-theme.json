    "weights": {
      "light": 300,
      "normal": 400,
      "semibold": 600,
      "bold": 700
    }
  },
  "formatting": {
    "currency": {
      "symbol": "â‚±",
      "position": "before",
      "separator": ",",
      "decimalPlaces": 2
    },
    "percentage": {
      "decimalPlaces": 1,
      "symbol": "%"
    },
    "numbers": {
      "separator": ",",
      "abbreviation": {
        "thousands": "K",
        "millions": "M",
        "billions": "B"
      }
    },
    "dates": {
      "short": "M/d/yyyy",
      "long": "MMMM d, yyyy",
      "monthYear": "MMM yyyy"
    }
  },
  "layout": {
    "margins": {
      "page": 20,
      "visual": 10,
      "title": 15
    },
    "spacing": {
      "small": 5,
      "medium": 10,
      "large": 20
    },
    "grid": {
      "columns": 12,
      "gutterWidth": 20
    }
  },
  "branding": {
    "logo": {
      "position": "top-right",
      "size": "small",
      "opacity": 0.8
    },
    "watermark": {
      "text": "TBWA Scout Analytics",
      "position": "bottom-right",
      "opacity": 0.1,
      "fontSize": 10
    }
  },
  "accessibility": {
    "colorBlindSafe": true,
    "highContrast": true,
    "screenReaderFriendly": true
  },
  "dataVisualization": {
    "charts": {
      "lineChart": {
        "strokeWidth": 2,
        "markerSize": 4,
        "gridLines": true
      },
      "barChart": {
        "borderRadius": 2,
        "spacing": 0.2
      },
      "pieChart": {
        "strokeWidth": 1,
        "labelLines": true
      }
    }
  },
