  WeekdayOrWeekend varchar(7) [note: 'Day type']
  TimeOfDay varchar(9) [note: 'Time period']
  AgeBracket int [note: 'Customer age group']
  Gender int [note: 'Customer gender']
  Substitution_Flag int [note: 'Has substitutions']
