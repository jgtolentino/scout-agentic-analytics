{
  "name": "scout-v7",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w packages/ui-components && npm run build -w apps/standalone-dashboard-nextjs",
    "dev": "npm run dev -w packages/ui-components & npm run dev -w apps/standalone-dashboard-nextjs",
    "lint": "npm run lint -w apps/standalone-dashboard-nextjs",
    "clean": "npm run clean -w packages/ui-components",
    "tokens:extract": "node scripts/extract-from-repo.js",
    "tokens:build": "style-dictionary build",
    "tokens:sync": "npm run tokens:extract && npm run tokens:build",
    "test:visual": "playwright test",
    "test:visual:headed": "playwright test --headed",
    "test:visual:debug": "playwright test --debug",
    "test:visual:update": "playwright test --update-snapshots",
    "test:tokens": "npm run tokens:sync && npm run test:visual"
  },
  "devDependencies": {
    "@tokens-studio/sd-transforms": "2.0.1",
    "colord": "2.9.3",
    "fast-glob": "3.3.3",
    "less": "4.4.1",
    "playwright": "1.55.0",
    "postcss": "8.5.6",
    "postcss-safe-parser": "7.0.1",
    "sass": "1.92.1",
    "style-dictionary": "4.4.0",
    "typescript": "^5"
  }
}
